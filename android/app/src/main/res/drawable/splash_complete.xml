<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa 1: Fondo de color negro -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
        </shape>
    </item>

    <!-- Capa 2: El logo vectorial -->
    <!-- 
         gravity="center" asegura que el logo esté perfectamente centrado
         en la pantalla sin riesgo de que se recorte.
    -->
    <item android:gravity="center">
        <!-- 
             Se ha reducido el tamaño un 10% respecto a la versión anterior.
             width y height ahora son 90dp.
        -->
        <vector
            android:width="90dp"
            android:height="90dp"
            android:viewportWidth="100"
            android:viewportHeight="100">
            
            <!-- 
                GRUPO 1: Brazos conectores (Lineas)
                Grosor: 5 unidades (5% del viewport 100)
            -->
            <path
                android:name="zync_arms"
                android:strokeWidth="5"
                android:strokeColor="#1CE8A1"
                android:strokeLineCap="round"
                android:strokeLineJoin="round"
                android:pathData="
                    M 50.00,50.00 L 50.00,15.00
                    M 50.00,50.00 L 83.29,39.18
                    M 50.00,50.00 L 69.17,81.16
                    M 50.00,50.00 L 30.83,81.16
                    M 50.00,50.00 L 16.71,39.18
                "/>

            <!-- 
                GRUPO 2: Nodos (Círculos Rellenos)
                Incluye el nodo central y los 5 nodos externos.
            -->
            <path
                android:name="zync_nodes"
                android:fillColor="#1CE8A1"
                android:pathData="
                    M 50.00,34.70
                    a 15.30,15.30 0 1,0 0,30.60
